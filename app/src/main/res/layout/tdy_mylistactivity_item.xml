<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_gravity="center">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:paddingTop="10dp"
            android:background="#fff"
            android:paddingBottom="10dp"
            android:layout_height="210dp">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_gravity="center"
                        android:src="@mipmap/shopicon"
                        android:layout_marginLeft="5dp"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />
                    <TextView
                        android:id="@+id/shoptitle"
                        android:text="五一市场"
                        android:textColor="@color/orange"
                        android:layout_marginLeft="5dp"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />
                    <LinearLayout
                        android:layout_weight="3"
                        android:layout_marginLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:gravity="right">
                        <ImageView
                            android:layout_gravity="center"
                            android:src="@mipmap/deleteicon"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginRight="5dp"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/shopicon"
                            android:src="@mipmap/example_1"
                            android:layout_width="90dp"
                            android:layout_height="90dp" />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center">
                            <TextView
                                android:textSize="14sp"
                                android:textColor="@color/black"
                                android:id="@+id/shopdescribe"
                                android:text="@string/shopinfos"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                        <TextView
                            android:id="@+id/shopnum"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="共1件商品"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/shopprice"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="10dp"
                            android:text="实付金额 100"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">
                        <Button
                            android:text="看相似"
                            android:background="@drawable/btn_border"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp" />
                        <Button
                            android:layout_marginLeft="10dp"
                            android:background="@color/red"
                            android:text="再次购买"
                            android:layout_marginRight="10dp"
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp" />
                </LinearLayout>
        </LinearLayout>
</LinearLayout>