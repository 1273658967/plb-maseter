<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#f2f2f2"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v4.widget.NestedScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/id_LinearLayout_1"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:background="@mipmap/bgimg_1"
                android:orientation="vertical"
                android:layout_height="260dp">
                <com.example.plb.tdy.custom.RoundImageView
                    android:id="@+id/rl_subscription"
                    android:layout_marginTop="50dp"
                    android:layout_width="90dp"
                    android:scaleType="fitXY"
                    app:type="circle"
                    android:src="@mipmap/tou_xaing"
                    android:layout_height="90dp" />
                <TextView
                    android:layout_marginTop="10dp"
                    android:textSize="@dimen/size_16"
                    android:textColor="#fff"
                    android:text="Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_below="@id/id_LinearLayout_1"
                android:id="@+id/id_LinearLayout_2"
                android:background="#fff"
                android:orientation="horizontal"
                android:paddingTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageButton
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:scaleType="centerInside"
                    android:background="@drawable/drawable_selector2"
                    android:src="@mipmap/obligation"
                    android:layout_weight="1"
                    android:id="@+id/id_Pending_payment"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />
                <ImageButton
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:scaleType="centerInside"
                    android:background="@drawable/drawable_selector2"
                    android:src="@mipmap/paid"
                    android:layout_weight="1"
                    android:id="@+id/id_Bypayment"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />
                <ImageButton
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:scaleType="centerInside"
                    android:background="@drawable/drawable_selector2"
                    android:src="@mipmap/completed"
                    android:layout_weight="1"
                    android:id="@+id/ordertocomplete"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />
                <ImageButton
                    android:id="@+id/rl_myOrder"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:scaleType="centerInside"
                    android:background="@drawable/drawable_selector2"
                    android:src="@mipmap/order"
                    android:layout_weight="1"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_below="@id/id_LinearLayout_2"
                android:background="#fff"
                android:id="@+id/id_LinearLayout_3"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:paddingBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="待付款"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="以付款"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="以完成"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="我的订单"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!--分界线-->

            <LinearLayout
                android:layout_below="@id/id_LinearLayout_3"
                android:orientation="horizontal"
                android:id="@+id/id_LinearLayout_4"
                android:background="#fff"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/rl_collection"
                    android:background="@drawable/border_bottomright"
                    android:layout_weight="1"
                    android:paddingTop="15dp"
                    android:scaleType="centerInside"
                    android:paddingBottom="15dp"
                    android:src="@mipmap/shoucan"
                    android:layout_width="60dp"
                    android:layout_height="60dp" />
                <ImageButton
                    android:background="@drawable/border_bottomright"
                    android:layout_weight="1"
                    android:paddingTop="15dp"
                    android:id="@+id/mylist"
                    android:scaleType="centerInside"
                    android:paddingBottom="15dp"
                    android:src="@mipmap/qingdan"
                    android:layout_width="60dp"
                    android:layout_height="60dp" />
                <ImageButton
                    android:background="@drawable/border_bottomright"
                    android:layout_weight="1"
                    android:paddingTop="15dp"
                    android:scaleType="centerInside"
                    android:paddingBottom="15dp"
                    android:src="@mipmap/fuwu"
                    android:id="@+id/servicecentre"
                    android:layout_width="60dp"
                    android:layout_height="60dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_below="@id/id_LinearLayout_4"
                android:orientation="horizontal"
                android:id="@+id/id_LinearLayout_4_1"
                android:background="#fff"
                android:layout_marginTop="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="店铺收藏"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="我的清单"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="服务中心"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!--分界线-->

            <LinearLayout
                android:layout_below="@id/id_LinearLayout_4_1"
                android:orientation="horizontal"
                android:id="@+id/id_LinearLayout_5"
                android:background="#fff"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageButton
                    android:background="@drawable/border_bottomright"
                    android:layout_weight="1"
                    android:paddingTop="15dp"
                    android:scaleType="centerInside"
                    android:paddingBottom="15dp"
                    android:src="@mipmap/xiaoxi"
                    android:id="@+id/messages"
                    android:layout_width="60dp"
                    android:layout_height="60dp" />
                <ImageButton
                    android:id="@+id/rl_dataManagement"
                    android:background="@drawable/border_bottomright"
                    android:layout_weight="1"
                    android:paddingTop="15dp"
                    android:scaleType="centerInside"
                    android:paddingBottom="15dp"
                    android:src="@mipmap/xinxi"
                    android:layout_width="60dp"
                    android:layout_height="60dp" />
                <ImageButton
                    android:id="@+id/rl_setting"
                    android:background="@drawable/border_bottomright"
                    android:layout_weight="1"
                    android:paddingTop="15dp"
                    android:scaleType="centerInside"
                    android:paddingBottom="15dp"
                    android:src="@mipmap/shezhi"
                    android:layout_width="60dp"
                    android:layout_height="60dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_below="@id/id_LinearLayout_5"
                android:id="@+id/id_LinearLayout_5_1"
                android:orientation="horizontal"
                android:background="#fff"
                android:layout_marginTop="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="消息"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="信息资料"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="设置"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>