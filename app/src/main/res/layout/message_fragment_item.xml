<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.messages">
    <RelativeLayout
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:background="#fff"
        android:layout_height="70dp">
        <LinearLayout
            android:id="@+id/id_LinearLayout_1"
            android:layout_width="50dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/messageicon"
                android:src="@mipmap/message1"
                android:layout_width="45dp"
                android:layout_height="45dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/id_LinearLayout_2"
            android:layout_toRightOf="@id/id_LinearLayout_1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="20dp">
            <TextView
                android:gravity="center_vertical"
                android:textSize="13sp"
                android:textFontWeight="800"
                android:id="@+id/text1"
                android:text="送你一张10元红包券"
                android:layout_width="match_parent"
                android:layout_height="35dp" />
            <TextView
                android:gravity="center_vertical"
                android:textSize="13sp"
                android:id="@+id/text2"
                android:layout_marginTop="5dp"
                android:text="听说红包与低价美食更配哦，点击领取"
                android:layout_width="match_parent"
                android:layout_height="35dp" />
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="1dp"
        android:gravity="center_vertical"
        android:background="#fff"
        android:layout_height="25dp">
        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="13sp"
            android:text="查看详情"
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>